{% extends "base.html.twig" %}

{% block titre %}
	<h1>{{recette.nom}}</h1>
{% endblock %}}


{% block contenu %}
	{% if isModification %}
		<form method="POST" action="/recettes/modificationServer">
			<div class="row m-2">
				<div class="col-6">
					<h2>Ingredients :</h2>
					<div class="form-group">
						<label for="nom">Titre</label>
						<input type="text" class="form-control" id="nom" name="nom" value="{{recette.nom}}">
					</div>
					<div class="form-group">
						<label for="ingredients">Ingr√©dients</label>
						<textarea class="form-control" id="ingredients" name="ingredients" rows="10">{{recette.ingredients}}</textarea>
					</div>

				</div>
				<div class="col-6">
					<div class="form-group">
						<label for="recette">Recette</label>
						<textarea class="form-control" id="recette" name="recette" rows="20">{{recette.recette}}</textarea>
					</div>
				</div>
			</div>
			<input type="hidden" name="identification" value="{{recette._id}}">
			<input class="btn btn-info w-100" type="submit" value="Valider">
		</form>
		
		<form method="POST" action="/recettes/updateImage" enctype="multipart/from-data">
			<h2> Image </h2>
			<div class="row">
			<input type="hidden" name="identification" value="{{recette._id}}">
				<img src="/images/{{recette.image}}" class="col-3">
				<div class="col-9">
					<div class="form-group">
						<label for="image">Image</label>
						<input type="file" class="form-control-file" id="image" name="image">
					</div>
					<input type="submit" value="Modifier l'image" class="btn btn-primary">
					

					
				</div>
			</div>


		{% else %}
			<div class="row m-2">
				<div class="col-6">
					<img src="/images/{{recette.image}}">
					<h2>Ingredients :</h2>
					<p>{{recette.ingredients}}</p>
				</div>
				<div class="col-6">
					<h2>Recette :
					</h2>
					<div>
						{{recette.recette}}
					</div>
				</div>
			</div>
		{% endif %}
	{% endblock %}
